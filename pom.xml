	</dependencies>



	<developers>
		<developer>
			<id>emersonat</id>
			<name>Emerson Andrade</name>
			<email>emersonat@ig.com.br</email>
			<url>http://emersondeandrade.com.br</url>
			<organization>Domotica</organization>
			<organizationUrl>http://domoticaweb.heroku.com</organizationUrl>
			<timezone>GMT-4</timezone>
		</developer>
	</developers>

	<build>
		<plugins>
			 <plugin>
			 	<!-- Commands: 			 				 	
				 	flyway:clean 		Drops all objects in the schema without dropping the schema itself
					flyway:init 		Creates and initializes the metadata table in the schema
					flyway:migrate 		Migrates the schema to the latest version
					flyway:validate 	Validates the applied migrations against the ones available on the classpath
					flyway:status 		Prints the current version of the schema
					flyway:history 		Prints the full migration history of the schema 
				 -->
				 <groupId>com.googlecode.flyway</groupId>
				 <artifactId>flyway-maven-plugin</artifactId>
				 <version>1.7</version>
										    					  
				 <configuration>
				 	 <driver>org.postgresql.Driver</driver>
	     			 <url>${database.url}</url>
	     			 <serverId>${database.server}</serverId>
	      			 <schemas>public</schemas>
				 	 <table>schema_history</table>
				     <initialVersion>1.0</initialVersion>
				     <initialDescription>Base Migration</initialDescription>
				</configuration>
			
			</plugin>
		
		
		</plugins>
	</build>
	
	 <profiles>
	   
	   
	   <!-- how to use: flyway:<command> -Plocal -->       	
		<profile>
     	 	<id>local</id>
		      	<properties>
		         <database.name>flyway_local</database.name>
		       	 <database.server>domotica_local</database.server>
		         <database.url>
		           jdbc:postgresql://localhost:5432/domoticaDB?autoReconnect=true;charSet=LATIN1
		         </database.url>
		        
		      </properties>
  		</profile>
  	
  		
	 
	 </profiles>

</project>